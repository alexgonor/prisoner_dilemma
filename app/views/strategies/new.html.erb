<% flash.each do |_type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<h1>New Strategy</h1>

<%= form_with model: @strategy, local: true do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description, size: "80x20" %>
  </div>

  <div>
    <%= form.submit "Create Strategy" %>
  </div>
<% end %>

<%= link_to "Back to All Strategies", strategies_path %>